/*********************************
 ****	Grading program	      ****
 ****  with scale 100 - 0     ****
 *********************************/

#include <iostream>
using namespace std;

const int ROWS = 5;
const int COLMS = 5;

int main ()
{
    int total = 0;
    double average = 0.0;
    int grades[ROWS][COLMS] = { {70, 80, 73, 78,  75},
                                {85, 88, 90,  91, 87},
                                {90, 93, 92, 100, 96},
                                {60, 55, 58, 70,  63},
                                {99, 100, 93, 90, 60} };
    for (int r = 0; r < ROWS; r++) {
    	cout << " students " << r+1 << ": ";
        for (int c = 0; c < COLMS; c++) {
        	cout << grades[r][c] << "  ";
        	total += grades[r][c];
        }
        average = total / COLMS; // taking stored total / col
        cout << "   Average: " << average << endl;
        total = 0; //re-set for the next row
        average = 0.0; //re-set for the next column
    }
    return 0;
}

