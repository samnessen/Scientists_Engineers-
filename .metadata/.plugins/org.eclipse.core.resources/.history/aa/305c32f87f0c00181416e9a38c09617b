//Matrix
//addition of 2-d array and display the result
#include <iostream>
#include <iomanip>
using namespace std;
const int NUMROWS = 3;
const int NUMCOLS = 2;
void add(int[NUMROWS][NUMCOLS], int[NUMROWS][NUMCOLS]); //Prototype

int main()
{
    int alpha[NUMROWS][NUMCOLS] = {1, 2,
                               1, 2,
                               1, 2};
    int beta[NUMROWS][NUMCOLS] = {1, 2,
                              1, 2,
                              1, 2};
    add(alpha, beta);
    return 0;
}

void add(int x[NUMROWS][NUMCOLS], int y[NUMROWS][NUMCOLS]) // header
{
    int i, j; //counter

    for (i=0; i<NUMROWS; i++)
    {
        for (j=0; j<NUMCOLS; j++)
            cout << setw(5) << x[i][j] + y[i][j];
            cout << endl;
    }
}
