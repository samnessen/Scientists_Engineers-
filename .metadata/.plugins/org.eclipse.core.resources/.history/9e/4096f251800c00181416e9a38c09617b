/***************************
 ****	Program Adds 	****
 ****	Two Arrays		****
 ***************************/

#include <iostream>
#include <iomanip>
using namespace std;

const int NUMROWS = 3;
const int NUMCOLS = 2;
void addMatrix(int[NUMROWS][NUMCOLS], int[NUMROWS][NUMCOLS]); //Prototype

int main()
{
    int alpha[NUMROWS][NUMCOLS] = { 3, 2,
                               	    3, 4,
								    1, 2 };
    int beta[NUMROWS][NUMCOLS]  = { 6, 2,
                                    1, 4,
                                    6, 2 };
    addMatrix(alpha, beta);
    return 0;
}

void addMatrix(int x[NUMROWS][NUMCOLS], int y[NUMROWS][NUMCOLS]) // header
{
    int i, j; //counter

    for (i=0; i<NUMROWS; i++)
    {
        for (j=0; j<NUMCOLS; j++)
            cout << setw(5) << x[i][j] + y[i][j];
            cout << endl;
    }
}
