//Creating namespace
#include <iostream>
#include <math.h>
using namespace std;
namespace geometry
{
    double area_ci(double r)
    {
        return (acos(-1) * pow(r, 2.0));
    }
    double volcyl (double r, double h)
    {
        return acos(-1)*pow(r, 2.0)*h;
    }
    double volSphere (double r)
    {
        return acos(-1)*pow(r, 3.0)*(4/3.0);
    }
    double area_sq(double s)
    {
        return pow(s, 2.0);
    }
    double area_re(double l, double h)
    {
        return (l * h);
    }

}


