/****************************************************
**** Conversions of common units for engineering ***
****************************************************/
#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
    char tempUnit;
    double farhenheit, celsius, kelvin;
    double tempValue;

    cout << " Program is a conversion of temperature units for fahrenheit, celsius, & kelvin (note: precision is at 2)\n";
    cout << "enter f or c to define current temperatures units \n";
    cin >> tempUnit;
    cout << "Enter value in degress: \n";
    cin >> tempValue;

    //out put command line formats
    cout << setiosflags (ios::fixed)
         << setiosflags (ios::showpoint)
         << setprecision(2);

    if (tempUnit == 'f') {
        celsius = (5.0 / 9.0) * tempValue + 32.0;
        cout << "\n Fahrenheit -> Celsius is: " << celsius << " degrees \n" << endl;
    }
    else if (tempUnit == 'c') {
        farhenheit = (9.0 / 5.0) * tempValue + 32.0;
        cout << "\n Celsius -> Fahrenheit is: " << farhenheit << " degrees \n" << endl;
	}
    else {cout << "wrong unit value";}
    /* conversion to kelvin */
    cout <<"would you like to convert to Kelvin \n y or n ";
    cin >> kelvin;
    if (kelvin == 'y') {
    		if (tempUnit == 'f') {
    			kelvin = celsius + 273.15;
    			cout << "Celsius -> Kelvin is:" << kelvin << " K";
    		}
    		else if (tempUnit == 'c') {
    			celsius = (5.0 / 9.0) * tempValue + 32.0;
    		}
    	kelvin = celsius + 273.15;
    	cout << "" << kelvin << " degrees";
    }
    else { cout << "good bye"; }

    return 0;
}
